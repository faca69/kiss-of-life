generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        String   @id 
  name      String   @unique
  inventory Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorldObjects {
  id        String   @id
  name      String
  position  Json @default("{}")
  rotation  Json @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


